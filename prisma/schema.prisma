generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String    @unique
  emailVerified   DateTime?
  image           String?
  role            UserRole  @default(PROSPECT_INVESTOR)
  password        String?
  accounts        Account[]
  sessions        Session[]
  
  // New investor-specific fields
  investmentRound String?   // "Seed", "Series A", "Series B", etc.
  accessLevel     AccessLevel @default(TIER_1)
  company         String?   // Their organization/fund name
  investmentAmount String?  // Their investment amount (optional)
  notes           String?   // Internal notes about the investor
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  PROSPECT_INVESTOR   // Limited access - basic deck only
  CURRENT_INVESTOR   // Full access - all decks, financials
  BOARD_MEMBER       // Everything + board materials
  PARTNER            // Business partner access
  ADMIN              // Full admin access
}

enum AccessLevel {
  TIER_1    // Basic access
  TIER_2    // Standard access  
  TIER_3    // Premium access
  TIER_4    // VIP access
}
